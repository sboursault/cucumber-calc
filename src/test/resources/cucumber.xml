<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:cucumber.properties" />

    <context:annotation-config/>

    <context:component-scan base-package="com.sb.cucumbercalc"/>

    <bean class="com.sb.cucumbercalc.support.ui.utils.EnhancedEventFiringWebDriver">
        <constructor-arg>
            <bean class="org.openqa.selenium.firefox.FirefoxDriver" />
            <!--<bean class="org.openqa.selenium.chrome.ChromeDriver" />-->
            <!--<bean class="org.openqa.selenium.htmlunit.HtmlUnitDriver">
                <constructor-arg type="boolean" value="true"/>
            </bean>-->
        </constructor-arg>
        <constructor-arg type="boolean" value="${cucumber.closeBrowserAfterTests}"/>
    </bean>
</beans>